<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/cInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cName"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Connection Information" />

    <TextView
        android:id="@+id/cName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Connection Name"
        android:textSize="48dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/prof"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/prof0"
                android:textOff=""
                android:textOn=""
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/prod"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/prof"
                android:background="@drawable/prod0"
                android:textOff=""
                android:textOn=""
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/integ"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/integ0"
                android:textOff=""
                android:textOn=""
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/adapt"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignBaseline="@+id/integ"
                android:background="@drawable/adapt0"
                android:textOff=""
                android:textOn=""
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/comm"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/comm0"
                android:textOff=""
                android:textOn=""
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/lead"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/lead0"
                android:textOff=""
                android:textOn=""
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/innovation"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/innovation0"
                android:textOff=""
                android:textOn=""
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/team"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/team0"
                android:textOff=""
                android:textOn=""
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>s
    

    <ImageView
        android:id="@+id/cPic"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/default_face" />

    <Button
        android:id="@+id/next"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/skip"
        android:layout_alignBottom="@+id/skip"
        android:layout_alignParentRight="true"
        android:background="@drawable/vouch_button" />

    <LinearLayout
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cPic"
        android:layout_marginTop="50dp"
        android:background="#ddd7d7"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WHAT ARE THEIR TOP TRAITS?"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:text="SELECT UP TO (4)"
            android:textSize="20dp" />
    </LinearLayout>

    <Button
        android:id="@+id/skip"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/vouch"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="35dp"
        android:background="@drawable/skip_button" />

</RelativeLayout>