<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/cInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cName"
        android:layout_centerHorizontal="true"
        android:text="Connection Information" />

    <TextView
        android:id="@+id/cName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Connection Name"
        android:textSize="24dp"
        android:textStyle="bold"
         />

    <ImageView
        android:id="@+id/cPic"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cInfo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_face" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ToggleButton
                android:id="@+id/prof"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textOff="Professionalism"
                android:textOn="Professionalism"
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/prod"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/prof"
                android:textOff="Productivity"
                android:textOn="Productivity"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp" >

            <ToggleButton
                android:id="@+id/integ"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textOff="Integrity"
                android:textOn="Integrity"
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/adapt"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/integ"
                android:textOff="Adaptibility"
                android:textOn="Adaptibility"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
             >

            <ToggleButton
                android:id="@+id/comm"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textOff="Communication"
                android:textOn="Communication"
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/lead"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:textOff="Leadership"
                android:textOn="Leadership"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp" >

            <ToggleButton
                android:id="@+id/innovation"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textOff="Innovation"
                android:textOn="Innovation"
                android:textSize="12dp" />

            <ToggleButton
                android:id="@+id/team"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:textOff="Teamwork"
                android:textOn="Teamwork"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cPic"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="WHAT ARE THEIR TOP TRAITS?"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="SELECT UP TO (4)" 
        android:textSize="12dp"/>

</RelativeLayout>